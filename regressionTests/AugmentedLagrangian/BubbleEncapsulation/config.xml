<?xml version="1.0" encoding="UTF-8"?>
<data>
    <problem>AugLag_BubbleEncapsulation</problem>

    <FEfields>
        <pspace>P1</pspace>
        <vspace>P2</vspace>
    </FEfields> 

    <AugmentedLagrangian>
        <Bn>.83</Bn>
        <a>10</a>      
    </AugmentedLagrangian>

   <unitflow_rhs_controller>
       <edge_name>left</edge_name>
   </unitflow_rhs_controller>


   <flowrate_calculation_edge_name>left</flowrate_calculation_edge_name>
   <report_header_reprint_frequency>30</report_header_reprint_frequency>

   <LowResolution_step>
      <max_iteration>600</max_iteration>
      <reports_frequency>40</reports_frequency>   

      <SteadyAnalyser>
	     <n_points_to_monitor>10</n_points_to_monitor>
         <normalized_deviation_limit>.001</normalized_deviation_limit>
      </SteadyAnalyser>

      <Secant>
         <max_iter>6</max_iter>
         <tolerance>1E-3</tolerance>
         <target>1.</target>
         <initial_point>0 0</initial_point>
         <next_input>3.</next_input>
      </Secant>
   </LowResolution_step>


   <HighResolution_step>
      <max_iteration>5</max_iteration>
      <flowrate_convergence_limit>1E-5</flowrate_convergence_limit>

      <AugmentedLag>
         <reports_frequency>50</reports_frequency>
         <convergence_limit>1E-5</convergence_limit>
         <max_iteration>1000</max_iteration>
         <min_iteration>500</min_iteration>
      </AugmentedLag>
   </HighResolution_step>

   <mesh>
      <name>bubble</name>
      <type>symx</type>
      <bubble_length>4</bubble_length>
      <bubble_width>.2</bubble_width>
      <channel_width>1</channel_width>
      <channel_length>16</channel_length>
      <bubble_curve_dteta_limit>.01</bubble_curve_dteta_limit>
      <command_line_args>-hmax .1</command_line_args>
      <plot_mesh_args>no</plot_mesh_args>
   </mesh>

    <Adaptation>
        <cycles>4</cycles>
        <hmin>.01 .005 .001 .0006</hmin>
        <hmax>.05 .02</hmax>
        <hcoef>6</hcoef>
        <err>3E-3</err>
        <n_vertices_max>10000</n_vertices_max>
    </Adaptation>    
</data>
