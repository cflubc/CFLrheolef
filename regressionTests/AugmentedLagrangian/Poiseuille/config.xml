<?xml version="1.0" encoding="UTF-8"?>
<data>
    <problem>AugLag_SteadyPoiseuille</problem>

    <FEfields>
        <pspace>P1</pspace>
        <vspace>P2</vspace>
    </FEfields>    

    <AugmentedLagrangian>
        <Bn>4.8</Bn>
        <a>10</a>             
    </AugmentedLagrangian>

   <convergence_limit>5E-6</convergence_limit>
   <max_iteration>2000</max_iteration>
   <reports_frequency>10</reports_frequency>
   <report_header_reprint_frequency>30</report_header_reprint_frequency>

   <source_term>
       <!--normal_stress_value>4.8</normal_stress_value>
       <edge_name>left</edge_name-->
       <bodyforce_vector>9.6 0 0</bodyforce_vector>
   </source_term>

   <mesh>
      <name>channel</name>
      <type>full</type>
      <width>2</width>
      <length>.5</length>
      <command_line_args>-hmax .1</command_line_args>
      <plot_mesh_args>no</plot_mesh_args>
   </mesh>

    <Adaptation>
        <cycles>0</cycles>
        <hmin>.01 .005 .002</hmin>
        <hmax>.07</hmax>
        <hcoef>6</hcoef>
        <err>3E-3</err>
        <n_vertices_max>20000</n_vertices_max>
    </Adaptation>    
</data>
